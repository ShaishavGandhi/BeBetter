<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding_base"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:background="@color/white" android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/appIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:contentDescription="App Icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="WhatsApp"
                android:layout_marginStart="@dimen/margin_base"
                app:layout_constraintLeft_toRightOf="@+id/appIcon"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/font_body"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_body"
                app:layout_constraintLeft_toLeftOf="@+id/label"
                app:layout_constraintTop_toBottomOf="@+id/label"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textSize="16sp"
                tools:text="24min"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>